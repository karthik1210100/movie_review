<div class="container mb-4">
  <div class="row justify-content-between align-items-center">
    <div class="col-md-6" style="flex: 0 0 43.5%;">
      <%= form_with url: movies_path, method: :get, local: true do %>
        <div class="input-group">
          <%= text_field_tag :q, params[:q], class: "form-control", placeholder: "🔍 Search movies by name..." %>
          <button class="btn btn-outline-primary" type="submit">Search</button>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= form_with method: :get, class: 'form-inline' do |form| %>
  <div class="form-group">
    <%= form.date_field :start_date, class: 'form-control', required: true, placeholder: "search" %>
  </div>
  <div class="form-group ml-3">
    <%= form.date_field :end_date, class: 'form-control', required: true %>
  </div>
  <%= form.submit "Show detail", class: "btn btn-outline-primary" %>
<% end %>